mixin Slide(config)
  .swiper-slide
    .row.align-items-center
      .col-xl-7.align-items-stretch
        .position-relative 
          .position-absolute.start-0.bottom-0.ms-3
            h3.text-white #{config.title}
            p.text-300 #{config.subtitle}
          img.portfolio-img(src=`${CWD}assets/img/portfolio/${config.image}` alt="").img-fluid.w-100
      .col-xl-4.mt-4
        p.fs-0=config.description


