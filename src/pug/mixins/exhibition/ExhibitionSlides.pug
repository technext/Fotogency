mixin Slide(config)
  .swiper-slide
    .row.align-items-stretch.align-items-xl-center
      .col-lg-5
        img(src=`${CWD}assets/img/exhibitions/${config.image}` alt=config.title).img-fluid.w-100
        .position-absolute.top-5.start-5.mt-n1.d-flex.flex-column.align-items-center
          span.rounded-circle.bg-white.p-2.d-block
          span.text-white.fw-bold=config.year
      .col-lg-6.col-xl-5.mt-4.mt-lg-0
        h1.fw-bolder.mb-3=config.title
        p.text-warning.fs-3.opacity-75=config.type
        p.fs-0=config.desc
        button.btn.btn-link.text-warning.p-0.fs-2
          span.fw-bolder Details 
          img(src=`${CWD}assets/img/icons/long-arrow.png` alt="arrow icon").ms-3


mixin ExhibitionSlides 
  +Section('container-fluid').py-3
    .position-absolute.w-100.border-dashed-bottom.top-5.zIndex-2
    .container
      .row
        .col-lg-12.pb-6.mb-lg-0
          .swiper-container.swiper-theme(data-swiper!={
            slidesPerView: 1,
            breakpoints: {
              576: {
                slidesPerView: 1.2,
              },
            },
            spaceBetween: 30,
            grabCursor: true,
            pagination: {
              el: '.swiper-pagination',
              clickable: true,
            },
            loop: true,
            loopedSlides: 3,
            slideToClickedSlide: true,
          })
            .swiper-wrapper
              each exhibition in exhibitions
                +Slide(exhibition)
