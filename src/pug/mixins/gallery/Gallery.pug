mixin Gallery 
  +Section.pt-3.pb-6.position-relative
    .position-absolute.absolute-horizontal-centered.start-0.ms-3.mt-3
      ul.nav.gallery-tab.d-flex.gap-2(data-filter-nav)
        li.nav-item
          a.nav-link.px-0.py-2.isotope-nav.active(href ='#!' data-filter='*') All
        li.nav-item
          a.nav-link.px-0.py-2.isotope-nav(href ='#!' data-filter='.shortfilms') Short films
        li.nav-item
          a.nav-link.px-0.py-2.isotope-nav(href ='#!' data-filter='.professional') Professional
        li.nav-item
          a.nav-link.px-0.py-2.isotope-nav(href ='#!' data-filter='.commercial') Commercial
    .row.g-3(data-isotope!={layoutMode: 'packery'})
      each image, i in galleryImages
        div(class=image.class).gallery-item.isotope-item
          img(src=`${CWD}assets/img/gallery/${image.image}` alt="" data-glightbox=`title: ${image.title}; description: ${image.description}`).img-fluid.w-100
